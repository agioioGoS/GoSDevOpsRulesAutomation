{
  "type": "Task",
  "rules": [
    {
      "ifChildState": "In Progress",
      "notParentStates": [ "In Progress", "Done" ],
      "setParentStateTo": "In Progress",
      "allChildren": false
    },
    {
      "ifChildState": "New",
      "notParentStates": [ "In Progress", "Done", "New" ],
      "setParentStateTo": "In Progress",
      "allChildren": false
    },
    {
      "ifChildState": "Done",
      "notParentStates": [],
      "setParentStateTo": "Done",
      "allChildren": true
    }
  ]
}
